<Page
    x:Class="TypingTrainer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TypingTrainer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <TextBlock x:ConnectionId='2' x:Name="WPMDisplay" 
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="34"
                       Opacity="0"/>
            <TextBlock x:ConnectionId='3' x:Name="CurrentChapterDisplay"
                       Text="Current Chapter: "
                       Margin="0 150 0 0"
                       Foreground="White"
                       FontSize="30"
                       Opacity="0.7"/>
            <TextBlock x:ConnectionId='4' Grid.Column="1"
                   Margin="0 70 0 0"
                   x:Name="Display"
                   Foreground="White"
                   FontSize="34"
                   FontFamily="Calibri"
                   TextWrapping="WrapWholeWords" 
                   LineHeight="10" 
                   Opacity="0.8">

            </TextBlock>
        </StackPanel>
    </Grid>
</Page>

