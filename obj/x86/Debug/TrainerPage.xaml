<Page
    x:Class="TypingTrainer.TrainerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TypingTrainer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:ConnectionId='2' x:Name="WPMDisplay" 
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="28"
                       FontFamily="Palatino Linotype"
                       FontWeight="Bold"
                   Margin="15 15 0 0"
                       Opacity="0"/>
        <StackPanel Grid.Column="1" 
                    Orientation="Vertical">

            <TextBlock x:ConnectionId='3' x:Name="CurrentChapterDisplay"
                       Margin="0 120 0 0"
                       Foreground="White"
                       FontSize="34"
                       FontFamily="Palatino Linotype"
                       FontWeight="Bold"
                       Opacity="0.7"/>
            <TextBlock x:ConnectionId='4' Grid.Column="1"
                   Margin="0 70 0 0"
                   x:Name="Display"
                   Foreground="White"
                   FontSize="34"
                   FontFamily="Imprint MT Shadow"
                   TextWrapping="WrapWholeWords" 
                   LineHeight="10" 
                   Opacity="0.8">

            </TextBlock>
        </StackPanel>
    </Grid>
</Page>

